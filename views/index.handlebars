<div class="container-fluid">
    <div class="row">
        <div class="col text-center">
            <div class="jumbotron w-50 mx-auto">
                <h1>Stories From HearthPwn</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-9">
            <ul class="list-group">
                {{#each stories}}
                    {{> stories/story-block}}
                {{/each}}
            </ul>
        </div>
        <div class="col-3">
            <div class="container d-flex flex-column">
                <div class="container" id="commentContainer">
                    <p class="text-center" id="commentHead">Comments</p>
                    <table class="table" id="commentTable">

                    </table>
                </div>
                <div class="container d-none" id="addComment">
                    <form id="commentForm">
                        <div class="form-group">
                            <label for="formUser">User</label>
                            <input type="text" class="form-control" id="formUser" placeholder="Your Name">
                        </div>
                        <div class="form-group">
                            <label for="formComment">Your Comment</label>
                            <textarea class="form-control" id="formComment" rows="3"></textarea>
                        </div>
                        <button type="submit" id="commentSubmit" class="btn btn-info">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>